#!/usr/bin/env bash

# Update the package list and install nginx
sudo apt-get update
sudo apt-get install nginx -y

# Configure nginx to listen on port 80
sudo sed -i 's/listen\ 80\ default_server/listen\ 80/g' /etc/nginx/sites-available/default

# Restart nginx
sudo service nginx restart

# Create a HTML file with "Hello World!" message
echo "<html><body><h1>Hello World!</h1></body></html>" > /var/www/html/index.html

# Test the nginx server by querying it at its root with curl
if curl http://localhost | grep -q "Hello World!"; then
    echo "Nginx successfully installed and configured!"
else
    echo "Something went wrong. Nginx is not serving the expected content."
fi
